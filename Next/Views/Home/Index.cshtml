@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="/css/tweets.css">

@if ((bool)ViewData["isAdmin"] == true)
{

<div>
    <h2> Hello administrator!</h2>
    <br />

    <table style="width:60%">
        <tr>
            <td>
                <a class="adminoption" class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Manage application Users</a>
            </td>
            <td>
                <a class="adminoption" class="nav-link text-dark" asp-area="" asp-controller="DataCenters" asp-action="Index">Manage the Data Centers</a>
            </td>
            <td>
                <a class="adminoption" class="nav-link text-dark" asp-area="" asp-controller="AdminStatistics" asp-action="Index">View the system statistics</a>
